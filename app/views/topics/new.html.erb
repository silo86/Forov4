<%= form_for @topic do |f| %>

<class class="field">
  <%= f.label      :title %>
  <br>
  <%= f.text_field :title %>

</class>
<hr>

<div class="field">
  <%= f.label     :body %>
  <br>
  <%= f.text_area :body %>
</div>

<div class="action">
  <%= f.submit %>
  <span>or</span>
  <%= link_to "Cancel", root_path, class:"btn btn-default" %>
</div>


<% end -%>